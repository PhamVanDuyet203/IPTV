<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dp"
    android:layout_height="215dp"
    android:padding="24dp"
    android:orientation="vertical"
    android:background="@drawable/bg_confirm_del">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rename_bts"
        android:fontFamily="@font/inter_bold"
        android:textSize="20sp"
        android:textColor="#171D1E"
        android:layout_marginBottom="16dp"/>

    <!-- Phần chứa TextView và ImageView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_text_round"
        android:gravity="center_vertical">

        <EditText
            android:id="@android:id/text1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter playlist name..."
            android:fontFamily="@font/inter_regular"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textSize="16sp"
            android:textColor="#171D1E"
            android:singleLine="true"
            android:background="@drawable/custom_edittext_background"/>

        <ImageView
            android:id="@+id/btn_del_text"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/remove"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="12dp" />
    </LinearLayout>

    <!-- Phần nút Cancel và Save -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/cancel_bts"
            android:textColor="#171D1E"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/save_bts"
            android:textColor="@color/cool_blue"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>